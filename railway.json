{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "numReplicas": 1,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  },
  "nixpacksConfig": {
    "phases": {
      "setup": {
        "cmds": [
          "apt-get update",
          "apt-get install -y build-essential cmake pkg-config"
        ]
      },
      "install": {
        "cmds": [
          "pip install -r requirements.txt"
        ]
      }
    }
  }
} 